								}
								
								listColumns.push(colName);
								//var length:String = Utils.checkNullValue(item.@length, "");
							}
							//listColumns.push("ProductFamily");
							//Database.revenueDao.dropAndRecreateTable(listColumns);
							
							// acc page 1 shipto + group
