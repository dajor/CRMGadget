									}
									i++;
								}
								
								//objRevenue["ProductFamily"] = getProductFamily(objRevenue);;
								// insert to db
								Database.revenueDao.insert(objRevenue);
							}
							
						stream.close();
					}
						
						if(asOfDate != ""){
