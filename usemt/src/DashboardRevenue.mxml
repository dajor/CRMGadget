									var date:Date = DateUtils.parse(value,"YYYY"+df+"MM" + df +"DD");
									//value = DateUtils.format(date,"MM");
									value = date.month + "";
									}
									*/
									objRevenue[col] = value;
									if("asofdate" == col.toLowerCase() && value != null && value != ""){
